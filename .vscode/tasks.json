{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++: g++ アクティブなファイルのビルド",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-std=c++23",
        "-O2",
        "-I${workspaceFolder}/library",
        "-I/home/leal/lib/ac-library/ac-library-master",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
    }
  ]
}